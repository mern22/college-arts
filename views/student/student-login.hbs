<section class="vh-100 my-5">
  <div class="container py-5 h-100">
    <div class="row d-flex align-items-center justify-content-center ">
          <h2 class="text-center my-4">Student Login</h2>
      <div class="col-md-7 col-lg-7 col-xl-6">
        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg" class="img-fluid " alt="Phone image">
      </div>
      <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1 shadow-3-strong p-5">

        <form action="/login" method="post">
        {{#if loginErr}}
        <div class="alert alert-danger" role="alert">
            {{loginErr}}
        </div>
        {{/if}}
          <!-- Email input -->
          <div class="form-outline mb-4">
            <input type="text" name="regno" required id="form1Example13" class="form-control form-control-lg" />
            <label class="form-label" for="form1Example13">Register number</label>
          </div>

          <!-- Password input -->
          <div class="form-outline mb-4">
            <input type="password" name="password" required id="form1Example23" class="form-control form-control-lg" />
            <label class="form-label" for="form1Example23">Password</label>
          </div>

          <div class="d-flex justify-content-around align-items-center mb-4">
            <!-- Checkbox -->
            <a href="/registration">Create an Account ? </a>
          </div>

          <!-- Submit button -->
          <button type="submit" class="btn btn-primary btn-lg btn-block">Sign in</button>

         
        </form>
      </div>
    </div>
  </div>
</section>

