                <hr>
                <div class="row">
                  <div class="col-sm-3">
                    <p class="mb-0">Phone</p>
                  </div>
                  <div class="col-sm-9">
                    <p class="text-muted mb-0">{{student.phoneno}}</p>
                  </div>
                </div>
                <hr>
                <div class="row">
                  <div class="col-sm-3">
                    <p class="mb-0">Class</p>
                  </div>
                  <div class="col-sm-9">
                    <p class="text-muted mb-0">{{student.class}}</p>
                  </div>
                </div>
                <hr>
                <div class="row">
                  <div class="col-sm-3">
                    <p class="mb-0">Roll no</p>
                  </div>
                  <div class="col-sm-9">
                    <p class="text-muted mb-0">{{student.rollno}}</p>
                  </div>
                </div>
                <hr>
                
                <div class="row">
                  <div class="col-sm-3">
                    <p class="mb-0">Gender</p>
