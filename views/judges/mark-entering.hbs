<div class="container d-flex bg-warning text-dark justify-content-center my-3 shadow-4-strong p-3 rounded">
    <div class="col-md-6 ">
        <a href="/judges/dashboard" class="btn btn-danger">Go back</a>
        <div>
            <h3 class="my-3 mb-4 text-center heading-text"><b>Enter marks here</b></h3>
        </div>
        <div>
            <div class="alert alert-warning" role="alert">
                <i class="fas fa-exclamation-circle me-3"></i> Please put your marks only in one field ( total marks :
                <b>50</b> )
            </div>

            <div class="row mb-3">
                <div class="form-group col-md-6">
                    <label class="mb-2">Chest no.</label>
                    <input type="text" class="form-control" value={{data.chestno}} disabled>
                </div>
                <div class="form-group col-md-6">
                    <label class="mb-2">Item</label>
                    <input type="text" class="form-control" value={{data.item}} disabled>
                </div>
            </div>

            <hr />
            <form action="/judges/mark1" method="post" class="row mb-3">
                <label class="mb-2">Judge 1</label>
                <div class="form-group col-md-6">
                    <input type="number" class="form-control" value={{data.mark1}} name="mark1">
                    <input type="text" name="id" value={{data._id}} hidden>
                </div>
                <div class="form-group col-md-6">
                    <button type="submit" class="btn btn-dark">Submit</button>
                </div>

            </form>
            <hr />
            <form action="/judges/mark2" method="post" class="row mb-3">
                <label class="mb-2">Judge 2</label>
                <div class="form-group col-md-6">
                    <input type="number" class="form-control" value={{data.mark2}} name="mark2">
                    <input type="text" name="id" value={{data._id}} hidden>
                </div>
                <div class="form-group col-md-6">
                    <button type="submit" class="btn btn-dark">Submit</button>
                </div>

            </form>
            <hr />
            <form action="/judges/mark3" method="post" class="row mb-3">
                <label class="mb-2">Judge 3</label>
                <div class="form-group col-md-6">
                    <input type="number" class="form-control" value={{data.mark3}} name="mark3">
                    <input type="text" name="id" value={{data._id}} hidden>
                </div>
                <div class="form-group col-md-6">
                    <button type="submit" class="btn btn-dark">Submit</button>
                </div>

            </form>
            <hr />
            
             <button class="btn btn-primary"><a href="/judges/completed/{{data._id}}">Completed</a></button>
        </div>
    </div>
</div>


<style>
    * {
        font-family: 'Poppins', sans-serif;
    }

    .heading-text {
        letter-spacing: 0.8px;
    }

    html {
        scroll-behavior: smooth;
    }

    a {
        color: #00B7FF;
    }

    .navbar .nav-link {
        color: #fff !important;
    }

    li {
        font-family: 'Poppins', sans-serif;
        font-weight: 500;
    }
</style>

